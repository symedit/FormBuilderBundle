{% block form_start %}
    {{ form_start(form) }}
{% endblock %}

{% block form_content %}
    {{ form_widget(form) }}
{% endblock %}

{% block form_actions_group %}
    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            {% block form_actions %}
                <button type="submit" class="btn btn-primary">
                    {% block form_action_submit %}
                        Submit
                    {% endblock %}
                </button>
            {% endblock %}
        </div>
    </div>
{% endblock %}

{% block form_end %}
    {{ form_end(form) }}
{% endblock %}